{
  "name": "oaspub-api",
  "version": "1.0.0",
  "description": "OpenAPI Specification Publisher",
  "main": "dist/index.js",
  "engines": {
    "node": ">=15"
  },
  "engineStrict": true,
  "scripts": {
    "build": "tsc && cpy '**/*' '!**/*.ts' ../dist --cwd=src --parents",
    "clean": "del-cli dist",
    "dev": "ts-node --files -r dotenv/config src/index.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:staged": "lint-staged",
    "start": "node dist/index.js",
    "test": "newman run --env-var \"host=localhost:8080\" ./test/integration/accounts.postman_collection.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stuft2/oaspub.git"
  },
  "keywords": [
    "OpenAPI",
    "Swagger",
    "OAS",
    "Publisher"
  ],
  "author": "Spencer Tuft <spencer.tuft@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stuft2/oaspub/issues"
  },
  "homepage": "https://github.com/stuft2/oaspub#readme",
  "dependencies": {
    "@types/morgan": "^1.9.2",
    "ajv": "^7.2.3",
    "ajv-formats": "^1.5.1",
    "debug": "^4.3.1",
    "env-var": "^7.0.0",
    "express": "^4.17.1",
    "got": "^11.8.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.get": "^4.4.2",
    "mongodb": "^3.6.4",
    "morgan": "^1.10.0",
    "openapi-enforcer": "^1.14.0",
    "openapi-enforcer-middleware": "^1.2.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@byu-oit/uapi-ts": "^2.0.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash.get": "^4.4.6",
    "@types/mongodb": "^3.6.3",
    "@types/newman": "^5.1.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "lint-staged": "^10.5.3",
    "newman": "^5.1.2",
    "openapi-types": "^7.2.3",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "lint-staged": {
    "packages/api/*.ts": "eslint --cache --fix"
  }
}
